{
  "name": "vercel-email",
  "version": "0.0.6",
  "description": "A simple free transactional email package built for Vercel Edge functions",
  "author": "Shayan",
  "license": "MIT",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sh4yy/vercel-email.git"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "pretty": "prettier --write ."
  },
  "devDependencies": {
    "@swc/core": "^1.3.64",
    "prettier": "^2.8.8",
    "tsup": "^6.7.0",
    "typescript": "^5.1.3"
  },
  "tsup": {
    "dts": true,
    "treeshake": true,
    "sourceMap": true,
    "minify": true,
    "format": [
      "esm",
      "cjs"
    ],
    "entry": [
      "src/main.ts"
    ]
  }
}
